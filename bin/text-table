#!/usr/bin/env perl
use warnings;
use strict;
use v5.10.0;

use Text::Table;
use Getopt::Long;

our $opt_tabs = 0;

Getopt::Long::Configure(qw(bundling gnu_compat));
Getopt::Long::GetOptions(
    "tabs" => \$opt_tabs
) or die();

###############################################################################

my $t = Text::Table->new();
while (<>) {
    s{\R\z}{};
    if ($opt_tabs) {
        $t->add(split("\t"));
    } else {
        $t->add(split);
    }
}
print $t;
